@model ContactoModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Crear curriculum</h5>
    <div class="card-body">
        <form asp-action="Guardar" enctype="multipart/form-data" asp-controller="Mantenedor" method="post">
                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input asp-for="Nombre" type="text" class="form-control"/>   
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            <div class="mb-3">
                <label class="form-label">Titulo</label>
                <input asp-for="Titulo" type="text" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
                <div class="mb-3">
                    <label class="form-label">Telefono</label>
                    <input asp-for="Telefono" type="text" class="form-control">
                <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Correo</label>
                    <input asp-for="Correo" type="text" class="form-control">
                <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            <div class="mb-3">
                <label class="form-label">WebSite</label>
                <input asp-for="Email" type="text" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Foto</label>
                <input type="file" asp-for="Imagen" class="form-control" placeholder="Tu imagen">
                <span asp-validation-for="Imagen" class="text-danger mt-3 d-block"></span>
            </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

