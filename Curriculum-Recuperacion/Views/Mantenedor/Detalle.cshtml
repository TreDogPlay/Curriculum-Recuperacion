@model Curriculum_Recuperacion.Models.ContactoModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/css/EstiloDetalle.css" />

    <title>Detalle</title>
</head>
<body>
    <section class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center">Detalle</h2>
            </div>
            <div class="col-6 mx-auto mt-4">
                <ul class="list-group">
                    <li class="list-group-item">Nombre: @Model.Nombre</li>
                    <li class="list-group-item">Titulo: @Model.Titulo</li>
                    <li class="list-group-item">Correo: @Model.Correo</li>
                    <li class="list-group-item">WebSite: @Model.Email</li>
                    <li class="list-group-item">Telefono: @Model.Telefono</li>
                    <li class="list-group-item">Foto: @Model.Foto</li>
                    <li class="list-group-item">
                        <img class="mx-auto d-block my-5" width="300" src="/uploads/@Model.Foto" />
                    </li>
                </ul>
            </div>
        </div>
    </section>
</body>
</html>
