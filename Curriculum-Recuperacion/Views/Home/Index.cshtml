@{
    ViewData["Title"] = "Curriculum";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/Estilo.css" />
</head>
<body>

    <div class="container text-center mt-5">
        <h1 class="display-4">Bienvenido a mi página</h1>

        <div class="about-me mt-4">
            <h2>Sobre mí:</h2>
            <p><strong>Nombre:</strong> Martin Enrique Aguilar Valencia</p>
            <p><strong>Grupo:</strong> 24BM</p>
            <p><strong>Página:</strong> Recuperación de programación WEB.</p>
        </div>

        <div class="resume-example mt-4">
            <h2>Ejemplo de cómo quedará tu currículum</h2>
            <img src="~/img/c567b4e0-dc42-461f-b070-9328c091b3a0.jpeg" alt="Descripción de la imagen">

            <h2 class="mt-4">No esperes más, crea tu propio currículum</h2>
            <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-primary mt-2">Crea tu propio currículum</a>
        </div>
    </div>

    <!-- Scripts de Bootstrap (asegúrate de tener Bootstrap instalado) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
